<!DOCTYPE html>
<html>
<head>
	<title>Table {{ table }}, niveau {{ localLevel }}</title>

	<meta charset="utf-8">

{% block stylesheets %}
	<link rel="stylesheet" type="text/css" href="{{ asset('css/games/mountainStyle.css') }}">
{% endblock %}	

{% set gameImages={
	celestin: asset(celestinImg),
	wizard: asset(wizardImg),
	background: asset('images/pupil/games/maps/' ~ map),
	bubble: asset('images/pupil/games/mountain/04.png')
} %}
</head>
<body>
{% block body %}

{#{ dump(questionsAndAnswers) }#}

	<div id=quest></div>

	<div id="data" 
		data-questionsanswers="{{ questionsAndAnswers|json_encode() }}"
		data-images="{{ gameImages|json_encode() }}"
		data-globallevel="{{ globalLevel }}"
		data-locallevel="{{ localLevel }}"
		data-table="{{ table }}"
	></div>

{% endblock %}

{% block javascripts %}

	<script type="text/javascript" src="{{ asset('js/jquery-3.3.1.min.js') }}"></script>
	<script type="text/javascript" src="{{ asset('js/games/tools.js') }}"></script>
	<script type="text/javascript" src="{{ asset('js/games/mountainLogic.js') }}"></script>

{% endblock %}

</body>
</html>