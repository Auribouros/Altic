{% extends 'baseLogin.html.twig' %}

{% block title %}Bienvenue sur Altic{% endblock %}

{% block body %}
    {{ parent() }}
<form method="post">
    {% if error %}
        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

<div class="container">
<div class="jumbotron">
    <h1 class="h3 mb-3 font-weight-normal">Connectez-vous ici</h1>
    <div class="row">
    <div class="col-4">
        <label for="inputEmail" class="sr-only">Email</label>
        <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" placeholder="Email" required autofocus>
    </div>
    </div>
    <br>
    <div class="row">
    <div class="col-4">
        <label for="inputPassword" class="sr-only">Mot de passe</label>
        <input type="password" name="password" id="inputPassword" class="form-control" placeholder="Mot de passe" required>
    </div>
    </div>

    <input type="hidden" name="_csrf_token"
           value="{{ csrf_token('authenticate') }}"
    ><br/>

    {#
        Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
        See https://symfony.com/doc/current/security/remember_me.html

        <div class="checkbox mb-3">
            <label>
                <input type="checkbox" name="_remember_me"> Remember me
            </label>
        </div>
    #}

    <button class="btn btn-lg btn-primary" type="submit">
        Se Connecter
    </button>
</form>
<br>
<br>
<div class="row">
    <a href="{{path('app_register')}}">Créer un compte</a><BR>
</div>
<div class="row">
    <a href="{{path('altic_pwdLost')}}">Mot de passe oublié</a><BR>
</div>
</div>
<br>
<div class="row">
    <h1>Aidez celestin dans ses fabuleuse aventures</h1><BR>
    <img src="{{asset('images/index/jeu1.png')}}" style="">
</div>
</div>
{% endblock %}
